<aiml version="1.0.1" encoding="UTF-8">

    <!-- Greetings and Politeness -->
    <category>
        <pattern>HELLO</pattern>
        <template>inaiml#Hello! How are you?</template>
    </category>

    <category>
        <pattern>HELLO *</pattern>
        <template>
            <srai>HELLO</srai>
        </template>
    </category>

    <category>
        <pattern>HI</pattern>
        <template>
            <srai>HELLO</srai>
        </template>
    </category>

    <category>
        <pattern>HI *</pattern>
        <template>
            <srai>HELLO</srai>
        </template>
    </category>

    <category>
        <pattern>HEY *</pattern>
        <template>
            <srai>HELLO</srai>
        </template>
    </category>

    <category>
        <pattern>HEY</pattern>
        <template>
            <srai>HELLO</srai>
        </template>
    </category>


    <category>
        <pattern>HOW ARE YOU</pattern>
        <template>inaiml#I'm functioning within normal parameters, thanks for asking.</template>
    </category>

    <category>
        <pattern>I AM FINE</pattern>
        <template>inaiml#That's good to know. What would you like to discuss about?</template>
    </category>


    <category>
        <pattern>EXIT</pattern>
        <template>inaiml#BYE
        </template>
    </category>

    <category>
        <pattern>THANKS</pattern>
        <template>inaiml#You are welcome.</template>
    </category>

    <category>
        <pattern>THANK YOU</pattern>
        <template>
            <srai>THANKS</srai>
        </template>
    </category>

    <category>
        <pattern>CHEERS</pattern>
        <template>inaiml#Sure mate.</template>
    </category>

    <category>
        <pattern>CHEERS *</pattern>
        <template>inaiml#Sure mate.</template>
    </category>


    <!--- Wikipedia API -->
    <category>
        <pattern>TELL ME ABOUT *</pattern>
        <template>wikishort#
            <star index="1"/>
        </template>
    </category>

    <category>
        <pattern>TELL ME MORE ABOUT *</pattern>
        <template>wikilong#
            <star index="1"/>
        </template>
    </category>

    <category>
        <pattern>MORE ABOUT *</pattern>
        <template>
            <srai>TELL ME MORE ABOUT
                <star/>
            </srai>
        </template>
    </category>

    <!-- Reactions for KB engine -->
    <category>
        <pattern>* PRODUCES *</pattern>
        <template>
            <star index="1"/>
            #PRODUCES#
            <star index="2"/>
        </template>
    </category>

    <category>
        <pattern>* CAUSES *</pattern>
        <template>
            <star index="1"/>
            #CAUSES#
            <star index="2"/>
        </template>
    </category>

    <category>
        <pattern>* INCLUDE *</pattern>
        <template>
            <star index="1"/>
            #INCLUDE#
            <star index="2"/>
        </template>
    </category>

    <category>
        <pattern>* HELPS *</pattern>
        <template>
            <star index="1"/>
            #HELPS#
            <star index="2"/>
        </template>
    </category>
    <!-- Default reaction -->
    <category>
        <pattern>*</pattern>
        <template>notinaiml#
            <star index="1"/>
        </template>
    </category>

</aiml>
